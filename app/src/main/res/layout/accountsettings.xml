<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edit Account"
        android:textColor="#000000"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Change Name"
        android:topLeftRadius="5dp"
        android:layout_marginBottom="10dp"
        android:gravity="top"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:background="#ecf0f1"
        android:padding="8dp"
        android:width="300dp"
        android:id="@+id/name"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email"
        android:layout_marginTop="36dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="10dp"
        android:width="300dp"
        android:background="#ecf0f1"
        android:padding="8dp"
        android:hint="Change Email"
        android:id="@+id/email"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Change Password"
        android:width="300dp"
        android:background="#ecf0f1"
        android:padding="8dp"
        android:fontFamily="sans-serif-light"
        android:id="@+id/password"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:hint="Add Interests, seperate each interest by a comma........"
        android:width="300dp"
        android:height="130dp"
        android:gravity="top"
        android:background="#ecf0f1"
        android:padding="8dp"
        android:id="@+id/interests"
        android:layout_centerVertical="true"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:layout_marginTop="52dp"
        android:background="#ecf0f1"
        android:fontFamily="sans-serif-light"
        android:layout_below="@+id/interests"
        android:layout_alignLeft="@+id/interests"
        android:layout_alignStart="@+id/interests"
        android:layout_alignRight="@+id/interests"
        android:layout_marginBottom="30dp"
        android:layout_alignEnd="@+id/interests" />




</RelativeLayout>
</ScrollView>
